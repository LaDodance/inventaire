<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- INVENTAIRE DU -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Inventaire du :"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tSaveInventoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JJ/MM/YY"
            android:textSize="25sp" />
    </LinearLayout>

    <!-- interne ? -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="15dp">

        <Switch
            android:id="@+id/switchInterne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/ToggleSwitchTheme"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:gravity="center"
        android:textSize="20sp"

        android:layout_marginBottom="20dp"/>
    <!-- Collectif loué Nom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:gravity="center"
        android:weightSum="6">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="25dp"
            android:text="Cercle"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/editTextCollectifProprio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="7"
            android:layout_weight="3"
            android:hint="Nom du cercle"
            android:inputType="textPersonName"
            android:textSize="15sp"/>

    </LinearLayout>

    <!-- Collectif loué Responsable -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:gravity="center"
        android:weightSum="6">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Responsable"
            android:layout_weight="2"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/editTextResponsableProprio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="7"
            android:inputType="textPersonName"
            android:hint="Nom"
            android:layout_weight="3"
            android:textSize="15sp"/>
    </LinearLayout>



    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locataire"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"/>


    <!-- Collectif louant Nom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:gravity="center"
        android:weightSum="6"
        >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Collectif "
            android:layout_weight="2"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/editTextCollectifLouant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="7"
            android:inputType="textPersonName"
            android:hint="Nom du collectif"
            android:layout_weight="3"
            android:textSize="15sp"
            android:enabled="true"/>
    </LinearLayout>

    <!-- Collectif loué Responsable -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:gravity="center"
        android:weightSum="6"
       >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Responsable"
            android:layout_weight="2"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/editTextResponsablelocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="7"
            android:inputType="textPersonName"
            android:hint="Nom"
            android:layout_weight="3"
            android:textSize="15sp"
            android:enabled="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/bSaveCancel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_cancel_24dp"
            android:layout_marginRight="50dp"
            />

        <Button
            android:id="@+id/bSaveOk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_check_circle_24dp"
            />
    </LinearLayout>

</LinearLayout>